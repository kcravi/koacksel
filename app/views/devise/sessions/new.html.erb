<div class="row align-center login-wrapper">
  <div class="columns medium-6 large-4 callout custom">
    <div class="columns text-center callout custom">
      <h4><strong>LOG-IN </strong></h4>
      <hr/>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="columns field">
            <%= f.label :username %>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-field" %>
        </div>

        <div class="columns field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="columns">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="columns">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <div class="columns">
        <br /><%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
